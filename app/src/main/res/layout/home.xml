<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
    android:layout_width="match_parent"
    android:name="com.example.android.motelmgmtapp.MainActivityFragment"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="645dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="259dp"
            android:layout_height="256dp"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupied"
                    android:id="@+id/occupied"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservation"
                    android:id="@+id/reservation"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:id="@+id/available"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirty"
                    android:id="@+id/dirty"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blocked"
                    android:id="@+id/blocked"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CheckOuts"
                    android:id="@+id/checkout"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupancy"
                    android:id="@+id/occupancy"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TotalRevenue"
                    android:id="@+id/totalrevenue"
                    android:layout_column="17"
                    android:layout_marginTop="10dp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="342dp"
            android:layout_height="216dp"
            android:layout_gravity="right|center_vertical">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="New Walk-In"
                    android:id="@+id/walkin"
                    android:layout_column="21"
                    android:layout_width="300dp"
                    android:layout_marginTop="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="New Reservation"
                    android:id="@+id/newreservation"
                    android:layout_column="21"
                    android:layout_marginTop="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Facilities Provided"
                    android:id="@+id/facilities"
                    android:layout_column="21"
                    android:layout_marginTop="20dp" />
            </TableRow>

        </TableLayout>
    </FrameLayout>

</LinearLayout>