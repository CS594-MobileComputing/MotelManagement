<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bluesky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_gravity="right|bottom">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/row0"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Room no. :"/>

                        <EditText
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/roomNo"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="1"
                        android:layout_marginTop="20dp"
                        android:id="@+id/title">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Item :"/>



                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Amount:"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />


                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Number:"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total:"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/row1"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Coffee :"/>



                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="1.5"
                            android:id="@+id/amt_C"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />


                        <EditText

                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textColor="#ffffff"
                            android:imeOptions="flagNoExtractUi"
                            android:id="@+id/noC"
                            android:layout_weight="0.30" />


                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/totC"
                            android:text="0.00"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/row2"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Tea :"/>



                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="1.5"
                            android:id="@+id/amt_T"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />


                        <EditText

                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textColor="#ffffff"
                            android:imeOptions="flagNoExtractUi"
                            android:id="@+id/noT"
                            android:layout_weight="0.30" />


                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/totT"
                            android:text="0.00"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/row3"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Omlett :"/>



                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="5"
                            android:id="@+id/amt_O"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />


                        <EditText

                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textColor="#ffffff"
                            android:imeOptions="flagNoExtractUi"
                            android:id="@+id/noO"
                            android:layout_weight="0.30" />


                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/totO"
                            android:text="0.00"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/row4"
                        android:weightSum="1"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:text="Total Amount : "/>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="39dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="0.00"
                            android:id="@+id/calculateAmount"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Calculate"
                            android:id="@+id/calculate"
                            />

                    </TableRow>

                </LinearLayout>

            </ScrollView>

        </TableLayout>

    </FrameLayout>

</LinearLayout>