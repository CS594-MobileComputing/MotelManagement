<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.motelmgmtapp.MainActivityFragment"
    tools:showIn="@layout/main"
    android:weightSum="1">

    <Button
        android:id="@+id/buttonCreateCustomer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Customer" />

    <TextView
        android:id="@+id/textViewRecordCount"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCreateCustomer"
        android:text="0 customers added"
        android:padding="1dp" />

    <ScrollView
        android:id="@+id/scrollViewRecords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         >
        <LinearLayout
            android:id="@+id/linearLayoutRecords"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>
    </ScrollView>



<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_weight="0.67">

    <Button
        android:id="@+id/rooms"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="fill_horizontal"
        android:text="Total Rooms" />

    <Button
        android:id="@+id/uncleanedRooms"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="unclenaed rooms" />


    <Button
        android:id="@+id/occupiedPercentage"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:text="No of occupied rooms" />

    <Button
        android:id="@+id/availabelRooms"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:text="Available Rooms" />

    <Button
        android:id="@+id/History"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="10"
        android:layout_gravity="fill_horizontal"
        android:text="History" />


    </GridLayout>

</LinearLayout>

